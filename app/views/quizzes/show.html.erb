<div class="container quiz-container">
  <div class="quiz-title-container">
    <h2 id="score" style="text-align: center;"> Now playing: <%= @movie.title %></h2>
    <div id="barra" style="margin-top: 15px;" >
      <div id="bar" class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100" style="width: <%= @score %>%">
      </div>
    </div>
  </div>

  <div id="quizcard" style="margin-top: 20px;">
        <% if @score < 100 %>
      <%= render partial: "shared/questioncard", locals: {question: @remaining_questions.first}  %>
    <% else %>
    <%= render partial: "shared/victorycard", locals: {movie: @movie } %>
    <% end %>
  </div>
</div>

